{
  "manifest_version": 3,
  "name": "PurePath â€“ AI Accessibility Assistant",
  "description": "Developer + User accessibility assistant: scans contrast and alt text, suggests AI fixes, and applies visual accessibility presets.",
  "version": "3.1",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
